{
  "manifest_version": 3,
  "name": "mojibake",
  "description": "AI-powered writing assistant using Chrome's built-in AI APIs",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/dom-utils.js",
        "shared/ai.js",
        "content/content.js"
      ]
    }
  ],
  "permissions": ["activeTab", "clipboardWrite"]
}
