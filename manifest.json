{
  "manifest_version": 3,
  "name": "mojibake",
  "description": "Style your text with Unicode formatting for Twitter/X and other platforms",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/unicode/maps/char-maps.js",
        "shared/unicode/maps/reverse-maps.js",
        "shared/unicode/graphemes.js",
        "shared/unicode/normalization.js",
        "shared/unicode/combining-marks.js",
        "shared/unicode/index.js",
        "shared/dom-utils.js",
        "shared/ai.js",
        "content/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "clipboardWrite"]
}
